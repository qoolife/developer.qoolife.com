!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %title= @item[:title]
    %meta{content: "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{content: "", :name => "description"}
    %meta{content: "", :name => "author"}
    / Le styles
    %link{href: "/assets/stylesheets/all.css", rel: "stylesheet"}
    %script{src: "/assets/javascripts/all.js"}
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      %script{src: "//html5shim.googlecode.com/svn/trunk/html5.js"}
    / Le fav and touch icons
    %link{href: "/ico/favicon.ico", rel: "shortcut icon"}
    %link{href: "/ico/apple-touch-icon-114-precomposed.png", rel: "apple-touch-icon-precomposed", sizes: "114x114"}
    %link{href: "/ico/apple-touch-icon-72-precomposed.png", rel: "apple-touch-icon-precomposed", sizes: "72x72"}
    %link{href: "/ico/apple-touch-icon-57-precomposed.png", rel: "apple-touch-icon-precomposed"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{data: {target: ".nav-collapse", toggle: "collapse"}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{href: "/"}
            %img{src: '/images/qoolife-36-invert-color.png', alt: 'Qoolife'}
            %span
              Developers
              &there4;
            %span.api
              API v1
          %a.vanity.pull-right{href: "https://qoolife.com"}
            Visit qoolife.com

    .main.container-fluid
      .row-fluid
        .span2
          .sidebar-nav.well
            %ul.nav.nav-list
              %li.nav-header API Summary
              %li
                %a{href: "/api/v1/authentication/"} Authentication
              %li
                %a{href: "/api/v1/data-format/"} Data Format
              %li
                %a{href: "/api/v1/pagination/"} Pagination
              %li
                %a{href: "/api/v1/status-codes/"} Status Codes
              %li
                %a{href: "/api/v1/hello/"} Hello, World
              %li.nav-header Users
              %li
                %a{href: "/api/v1/users/me/"} User profile
              %li.nav-header Journal Entries
              %li
                %a{href: "/api/v1/journal_entries/"} Listing own entries
              %li
                %a{href: "/api/v1/journal_entries/create/"} Creating an entry
              %li
                %a{href: "/api/v1/journal_entries/measurements/"} Measurements and questionnaires
              %li
                %a{href: "/api/v1/journal_entries/update/"} Update a current entry
              %li
                %a{href: "/api/v1/journal_entries/attachments/"} Uploading files as attachments
              %li.nav-header Conversations
              %li
                %a{href: "/api/v1/conversations/"} Listing conversations
              %li
                %a{href: "/api/v1/conversations/show"} Showing a conversation
              %li
                %a{href: "/api/v1/conversations/create/"} Starting a conversation
              %li
                %a{href: "/api/v1/conversations/post/"} Replying to a conversation
              %li
                %a{href: "/api/v1/conversations/attachments/"} Uploading files as attachments
              %li.nav-header Contacts
              %li
                %a{href:"/api/v1/contacts/"} Listing contacts
          / /.well
        / /span
        .span10
          .main-content.well
            = yield
        / /span
      / /row

      %footer.container-fluid.well
        %ul.unstyled
          %li
            %a{href: "https://qoolife.com/quienes-somos"} About us
          %li
            %a{href: "http://blog.qoolife.com/"} Our Blog
          %li
            %a{href: "https://qoolife.com/contacto"} Contact us
        .copy
          &copy; Bet Quality of Life 2013

    / /.fluid-container

    - domain = @config[:google_analytics][:domain]
    - site_id = @config[:google_analytics][:site_id]
    - if site_id
      :javascript
        var analyticsFileTypes = [''];
        var analyticsEventTracking = 'enabled';

      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', "#{site_id}"]);
        _gaq.push(['_setDomainName', "#{domain}"]);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
